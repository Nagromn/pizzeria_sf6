{# Import base.html.twig #}
{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}
      {# Container #}
      <div class="container mx-auto">

            {# Message flash #}
            {% for message in app.flashes('success') %}
                  <div class="flex items-center bg-teal-100 border-t-4 border-teal-500 text-sm font-bold px-4 py-3 w-100 mt-5" role="alert">
                        <svg class="fill-current w-4 h-4 mr-2 text-teal-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
                        <p class="font-bold">{{ message }}</p>
                  </div>
            {% endfor %}

            {# Navigation secondaire #}
            {% include "components/_subnavigation.html.twig" %}

            {# Composant du carousel #}
            {% include "components/_carousel.html.twig" %}

            {# Bloc présentation #}
            <div class="flex flex-row bg-white rounded-3xl justify-center mt-10">
                  <div class="block max-w-full bg-white-200 p-6 shadow-full">
                        <h3 class="text-center leading-tight font-bold text-custom-violet text-4xl mt-10 mb-5">La Pizzeria, un savoir-faire de qualité !</h3>
                        <p class="text-custom-violet leading-tight text-lg px-6 py-4 mb-5">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Eum, dignissimos distinctio ut eos, asperiores minima magnam optio vero dolores repellendus quam consequuntur voluptatum corrupti obcaecati cum. Ab suscipit eius accusamus!
                        Dolore nam rem et aut at illum explicabo odit eos modi, sequi commodi sint, obcaecati vero non qui! Minus laudantium maxime amet nobis ipsam laboriosam voluptatem molestiae quam dignissimos quae.
                        </p>
                        <div class="flex justify-center mb-10">
                              <a href="" class="inline-block border-2 border-custom-violet rounded-full py-4 px-10 bg-transaparent text-custom-violet font-bold leading-tight shadow-md hover:bg-gradient-to-r from-custom-dark-orange to-custom-light-orange hover:shadow-lg hover:text-white hover:border-white focus:bg-custom-dark-orange focus:shadow-lg focus:outline-none focus:ring-0 active:bg-custom-dark-orange active:shadow-lg transition duration-150 ease-in-out">
                                    <i class="fa-solid fa-chevron-right mr-1"></i> A propos
                              </a>
                        </div>
                  </div>
            </div>

            {# Bloc produits #}
            <div class="block max-w-full rounded-3xl bg-white shadow-full mt-10 p-6">
                  <h2 class="font-bold leading-tight text-custom-violet text-4xl text-center pt-10 mb-6">Notre Sélection</h2>
                  <div class="flex flex-row flex-wrap justify-around">
                        {% for product in products %}
                              {% include "components/_card.html.twig" with {product: product} only %}
                        {% endfor %}
                  </div>
            </div>

            {# Composants des bouttons de choix des catégories #}
            {% include "components/_product_buttons.html.twig" %}

            {# Nos nouveautés #}
            {# <h2 class="font-medium leading-tight text-3xl text-gray-600 text-center mt-5 uppercase">Nos nouveautés</h2>
            <div class="flex flex-row flex-wrap justify-evenly">
                  {% for product in products %}
                        {% include "components/_card.html.twig" with {product: product} only %}
                  {% endfor %}
            </div> #}

            {# Nos meilleures ventes #}
            {# <div class="flex flex-row flex-wrap justify-evenly">
                  {% for product in products %}
                        {% include "components/_card.html.twig" with {product: product} only %}
                  {% endfor %}
            </div> #}
      </div>
{% endblock %}
