{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
      {# Titre principal de la page #}
      <h2 class="font-medium leading-tight text-4xl mt-10 text-center text-custom-violet">Modification de votre mot de passe</h2>

      {# Container de la page #}
      <div class="container mx-auto my-10">
            <div class="flex justify-center">
                  <div class="block p-6 rounded-lg shadow-lg bg-white max-w-lg w-screen">
                        {# Affiche les messages flash success #}
                        {% for message in app.flashes('success') %}
                              <div class="bg-green-100 rounded-lg py-5 px-6 mb-4 text-base text-green-700" role="alert">
                                    {{ message }}
                              </div>
                        {% endfor %}

                        {# Formulaire de réinitialisation du mot de passe #}
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                  </div>
            </div>
      </div>
{% endblock %}
